{{>head}}
{{>navbar}}

<body>
    
<section class="login flex justify-center">
    
    <div class="bg-white lg:w-4/12 md:6/12 w-10/12 m-auto shadow-md">
            
            <div class="py-8 px-8 rounded-xl">

                {{!-- <h3 id="error-msg">{{error}}</h3> --}}
                
                <h1 class="font-medium text-2xl mt-3 text-center">Login</h1>
                
                <form action="/login" method="POST" class="mt-6">
                    
                    <div class="my-5 text-sm">
                        
                        <label for="username" class="block text-black">Email</label>
                        
                        <input name="email" type="email" autofocus id="username" class="rounded-sm px-4 py-3 mt-3 focus:outline-none bg-gray-100 w-full" placeholder="Enter your Email" />
                    
                    </div>
                    
                    <div class="my-5 text-sm">
                        
                        <label for="password" class="block text-black">Password</label>
                        
                        <input name="password" type="password" autocomplete="off" id="password" class="rounded-sm px-4 py-3 mt-3 focus:outline-none bg-gray-100 w-full" placeholder="Enter your Password" />
                        
                        <div class="flex justify-end mt-2 text-xs text-gray-600">
                           
                           <a href="/register">Don't have an account?</a>
                        
                        </div>
                    
                    </div>

                     <button type="submit" class="block text-center text-white bg-gray-800 p-3 btn-primary w-full rounded-full">Login</button>
                </form>

            </div>

        </div>
</section>


</body>