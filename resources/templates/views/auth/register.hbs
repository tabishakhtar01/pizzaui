{{>navbar}}

<body>
    
<section class="login flex justify-center">
    
    <div class="bg-white lg:w-4/12 md:6/12 w-10/12 m-auto shadow-md">
            
            <div class="py-8 px-8 rounded-xl">
                
                <h1 class="font-medium text-2xl mt-3 text-center">Register</h1>
                
                <form action="/register" method="POST" class="mt-6">

                    <div class="my-5 text-sm">
                        
                        <label for="username" class="block text-black">Name</label>
                        
                        <input name="name" autocomplete="off" type="text" autofocus  class="rounded-sm px-4 py-3 mt-3 focus:outline-none bg-gray-100 w-full" placeholder="Enter your Name" />
                    
                    </div>
                    
                    <div class="my-5 text-sm">
                        
                        <label for="username" class="block text-black">Email</label>
                        
                        <input name="email" autocomplete="off" type="email" autofocus  class="rounded-sm px-4 py-3 mt-3 focus:outline-none bg-gray-100 w-full" placeholder="Enter your Email" />
                    
                    </div>
                    
                    <div class="my-5 text-sm">
                        
                        <label for="password"  class="block text-black">Password</label>
                        
                        <input name="password" autocomplete="off" type="password" id="password" class="rounded-sm px-4 py-3 mt-3 focus:outline-none bg-gray-100 w-full" placeholder="Enter your Password" />
                        
                        <div class="flex justify-end mt-2 text-xs text-gray-600">
                           
                           <a href="/login">Already have an account?</a>
                        
                        </div>
                    
                    </div>

                     <button type="submit" class="block text-center text-white bg-gray-800 p-3 btn-primary w-full rounded-full">Register</button>
                </form>

            </div>

        </div>
</section>


</body>